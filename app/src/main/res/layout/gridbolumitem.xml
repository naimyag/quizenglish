<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="120dp"
    android:layout_width="120dp"
    android:id="@+id/pnlItem"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/button"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <TextView
        android:id="@+id/bolum"
        android:text="1."
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        />

    <TextView
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/txtBolum"
        android:text="Bölüm"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:gravity="center"
        />

    <LinearLayout
        android:gravity="center"
        android:id="@+id/pnlResimler"
        android:orientation="horizontal"
        android:layout_width="80dp"
        android:layout_height="24dp">

        <ImageView
            android:id="@+id/yildiz1"
            android:background="@drawable/yildizaktif"
            android:layout_width="23dp"
            android:layout_height="23dp" />
        <ImageView
            android:id="@+id/yildiz2"
            android:background="@drawable/yildizaktif"
            android:layout_width="23dp"
            android:layout_height="23dp" />
        <ImageView
            android:id="@+id/yildiz3"
            android:background="@drawable/yildizpasif"
            android:layout_width="23dp"
            android:layout_height="23dp" />

    </LinearLayout>







</LinearLayout>